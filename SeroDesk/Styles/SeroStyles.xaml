<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- SeroDock Icon Style -->
    <Style x:Key="DockIconStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <ContentPresenter x:Name="ContentPresenter"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!-- iOS-style bounce on press -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Launchpad Icon Style -->
    <Style x:Key="LaunchpadIconStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <ContentPresenter/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Glassmorphism Card Style -->
    <Style x:Key="GlassmorphismCard" TargetType="Border">
        <Setter Property="Background" Value="#40FFFFFF"/>
        <Setter Property="BorderBrush" Value="#60FFFFFF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="20"/>
        <!-- REMOVED: BlurEffect (causes visibility issues) -->
    </Style>
    
    <!-- iOS-Style Button -->
    <Style x:Key="iOSButton" TargetType="Button">
        <Setter Property="Background" Value="#007AFF"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Padding" Value="20,12"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#0056CC"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#003D99"/>
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.95" ScaleY="0.95" CenterX="50" CenterY="50"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Rounded TextBox Style -->
    <Style x:Key="RoundedTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="#40FFFFFF"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#60FFFFFF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="15,10"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost"
                                    Margin="{TemplateBinding Padding}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Custom Colors for iOS-Theme -->
    <Color x:Key="iOSBlue">#007AFF</Color>
    <Color x:Key="iOSGreen">#34C759</Color>
    <Color x:Key="iOSRed">#FF3B30</Color>
    <Color x:Key="iOSOrange">#FF9500</Color>
    <Color x:Key="iOSPurple">#AF52DE</Color>
    <Color x:Key="iOSPink">#FF2D92</Color>
    <Color x:Key="iOSYellow">#FFCC00</Color>
    
    <!-- Gradient Backgrounds for Modern Look -->
    <LinearGradientBrush x:Key="iOSBlueToPurple" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#007AFF" Offset="0"/>
        <GradientStop Color="#AF52DE" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="iOSGreenToBlue" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#34C759" Offset="0"/>
        <GradientStop Color="#007AFF" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="iOSOrangeToRed" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF9500" Offset="0"/>
        <GradientStop Color="#FF3B30" Offset="1"/>
    </LinearGradientBrush>
    
</ResourceDictionary>