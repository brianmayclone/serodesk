<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Light Theme Color Palette -->
    
    <!-- Primary Colors -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#FFF5F5F5"/>
    <SolidColorBrush x:Key="TertiaryBackgroundBrush" Color="#FFEEEEEE"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FF000000"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#FF666666"/>
    <SolidColorBrush x:Key="TertiaryTextBrush" Color="#FF999999"/>
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="PrimaryBorderBrush" Color="#FFCCCCCC"/>
    <SolidColorBrush x:Key="SecondaryBorderBrush" Color="#FFDDDDDD"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#FF0078D4"/>
    
    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentBrush" Color="#FF0078D4"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#FF106EBE"/>
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#FF005A9E"/>
    
    <!-- Window Colors -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#E6FFFFFF"/>
    <SolidColorBrush x:Key="WindowTitleBarBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="WindowBorderBrush" Color="#FFCCCCCC"/>
    
    <!-- Control Colors -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#FFF0F0F0"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#FFD0D0D0"/>
    <SolidColorBrush x:Key="ButtonDisabledBrush" Color="#FFF8F8F8"/>
    
    <!-- Input Colors -->
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="#FFCCCCCC"/>
    <SolidColorBrush x:Key="TextBoxFocusBrush" Color="#FF0078D4"/>
    
    <!-- Dock Colors -->
    <LinearGradientBrush x:Key="DockBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#C0F0F0F0" Offset="0"/>
        <GradientStop Color="#B0E8E8E8" Offset="0.5"/>
        <GradientStop Color="#C5F0F0F0" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="DockBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#D0FFFFFF" Offset="0"/>
        <GradientStop Color="#A0FFFFFF" Offset="1"/>
    </LinearGradientBrush>
    
    <SolidColorBrush x:Key="DockIconBackgroundBrush">#40FFFFFF</SolidColorBrush>
    <SolidColorBrush x:Key="DockIconHoverBrush" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="DockIconPressedBrush" Color="#FFD0D0D0"/>
    <SolidColorBrush x:Key="DockIconForegroundBrush">#333333</SolidColorBrush>
    <SolidColorBrush x:Key="DockSeparatorBrush">#60000000</SolidColorBrush>
    
    <!-- Dock Transparency Variations -->
    <LinearGradientBrush x:Key="DockBackgroundNoTransparencyBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFF0F0F0" Offset="0"/>
        <GradientStop Color="#FFE8E8E8" Offset="0.5"/>
        <GradientStop Color="#FFF0F0F0" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Notification Colors -->
    <SolidColorBrush x:Key="NotificationBackgroundBrush" Color="#E6F8F8F8"/>
    <SolidColorBrush x:Key="NotificationBorderBrush" Color="#FFCCCCCC"/>
    
    <!-- Status Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#FF107C10"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFFF8C00"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#FFD13438"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#FF0078D4"/>
    
    <!-- Glassmorphism Effects -->
    <SolidColorBrush x:Key="GlassBackgroundBrush" Color="#4DFFFFFF"/>
    <SolidColorBrush x:Key="GlassBorderBrush" Color="#4DCCCCCC"/>
    
    <!-- Application-wide Window Style -->
    <Style x:Key="LightWindowStyle" TargetType="Window">
        <Setter Property="Background" Value="{StaticResource WindowBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource WindowBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    
    <!-- Button Styles -->
    <Style x:Key="LightButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource ButtonHoverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource ButtonPressedBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="{StaticResource ButtonDisabledBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource TertiaryTextBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- TextBox Styles -->
    <Style x:Key="LightTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource TextBoxBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource TextBoxBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource TextBoxFocusBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Apply styles globally -->
    <Style TargetType="Window" BasedOn="{StaticResource LightWindowStyle}"/>
    <Style TargetType="Button" BasedOn="{StaticResource LightButtonStyle}"/>
    <Style TargetType="TextBox" BasedOn="{StaticResource LightTextBoxStyle}"/>
    
</ResourceDictionary>