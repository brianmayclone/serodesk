<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Dark Theme Color Palette -->
    
    <!-- Primary Colors -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#FF1E1E1E"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#FF2D2D30"/>
    <SolidColorBrush x:Key="TertiaryBackgroundBrush" Color="#FF3E3E42"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#FFB3B3B3"/>
    <SolidColorBrush x:Key="TertiaryTextBrush" Color="#FF808080"/>
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="PrimaryBorderBrush" Color="#FF4A4A4A"/>
    <SolidColorBrush x:Key="SecondaryBorderBrush" Color="#FF3A3A3A"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#FF0078D4"/>
    
    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentBrush" Color="#FF0078D4"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#FF106EBE"/>
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#FF005A9E"/>
    
    <!-- Window Colors -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#E61E1E1E"/>
    <SolidColorBrush x:Key="WindowTitleBarBrush" Color="#FF1E1E1E"/>
    <SolidColorBrush x:Key="WindowBorderBrush" Color="#FF4A4A4A"/>
    
    <!-- Control Colors -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#FF383838"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#FF484848"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#FF585858"/>
    <SolidColorBrush x:Key="ButtonDisabledBrush" Color="#FF2A2A2A"/>
    
    <!-- Input Colors -->
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="#FF2A2A2A"/>
    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="#FF4A4A4A"/>
    <SolidColorBrush x:Key="TextBoxFocusBrush" Color="#FF0078D4"/>
    
    <!-- Dock Colors -->
    <LinearGradientBrush x:Key="DockBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#C0303030" Offset="0"/>
        <GradientStop Color="#B0282828" Offset="0.5"/>
        <GradientStop Color="#C5303030" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="DockBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#60FFFFFF" Offset="0"/>
        <GradientStop Color="#40FFFFFF" Offset="1"/>
    </LinearGradientBrush>
    
    <SolidColorBrush x:Key="DockIconBackgroundBrush">#40FFFFFF</SolidColorBrush>
    <SolidColorBrush x:Key="DockIconHoverBrush" Color="#FF383838"/>
    <SolidColorBrush x:Key="DockIconPressedBrush" Color="#FF484848"/>
    <SolidColorBrush x:Key="DockIconForegroundBrush">#FFFFFF</SolidColorBrush>
    <SolidColorBrush x:Key="DockSeparatorBrush">#60FFFFFF</SolidColorBrush>
    
    <!-- Dock Transparency Variations -->
    <LinearGradientBrush x:Key="DockBackgroundNoTransparencyBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF303030" Offset="0"/>
        <GradientStop Color="#FF282828" Offset="0.5"/>
        <GradientStop Color="#FF303030" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Notification Colors -->
    <SolidColorBrush x:Key="NotificationBackgroundBrush" Color="#E6252525"/>
    <SolidColorBrush x:Key="NotificationBorderBrush" Color="#FF4A4A4A"/>
    
    <!-- Status Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#FF107C10"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFFFD700"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#FFD13438"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#FF0078D4"/>
    
    <!-- Glassmorphism Effects -->
    <SolidColorBrush x:Key="GlassBackgroundBrush" Color="#4D1E1E1E"/>
    <SolidColorBrush x:Key="GlassBorderBrush" Color="#4D4A4A4A"/>
    
    <!-- Application-wide Window Style -->
    <Style x:Key="DarkWindowStyle" TargetType="Window">
        <Setter Property="Background" Value="{StaticResource WindowBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource WindowBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    
    <!-- Button Styles -->
    <Style x:Key="DarkButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource ButtonHoverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource ButtonPressedBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="{StaticResource ButtonDisabledBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource TertiaryTextBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- TextBox Styles -->
    <Style x:Key="DarkTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource TextBoxBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource TextBoxBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource TextBoxFocusBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Apply styles globally -->
    <Style TargetType="Window" BasedOn="{StaticResource DarkWindowStyle}"/>
    <Style TargetType="Button" BasedOn="{StaticResource DarkButtonStyle}"/>
    <Style TargetType="TextBox" BasedOn="{StaticResource DarkTextBoxStyle}"/>
    
</ResourceDictionary>