<UserControl x:Class="SeroDesk.Views.SeroNotificationCenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="960">
    
    <!-- iOS-Style Notification Center -->
    <Grid x:Name="NotificationPanel" 
          Background="#E6000000"
          Visibility="Collapsed"
          RenderTransformOrigin="0.5,0">
        <Grid.RenderTransform>
            <TranslateTransform x:Name="NotificationTransform" Y="-1080"/>
        </Grid.RenderTransform>
        
        <!-- Content Container -->
        <ScrollViewer VerticalScrollBarVisibility="Hidden"
                     HorizontalScrollBarVisibility="Disabled"
                     Margin="20,60,20,120">
            
            <StackPanel>
                <!-- Header -->
                <Grid Margin="0,20,0,20">
                    <TextBlock Text="Notifications"
                              Foreground="White"
                              FontSize="24"
                              FontWeight="Bold"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"/>
                    
                    <!-- Clear All Button -->
                    <Button Content="Clear All"
                           Background="Transparent"
                           Foreground="#007AFF"
                           BorderThickness="0"
                           FontSize="16"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Click="ClearAllNotifications_Click"
                           Cursor="Hand"/>
                </Grid>
                
                <!-- Notifications List -->
                <ItemsControl x:Name="NotificationsList"
                             ItemsSource="{Binding Notifications}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Notification Card -->
                            <Border Background="#CC1E1E1E"
                                   CornerRadius="16"
                                   Margin="0,0,0,12"
                                   Padding="16">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="20" 
                                                     Opacity="0.3" 
                                                     ShadowDepth="2"/>
                                </Border.Effect>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- App Icon -->
                                    <Border Grid.Row="0" Grid.RowSpan="3" Grid.Column="0"
                                           Background="#40FFFFFF"
                                           CornerRadius="12"
                                           Width="48" Height="48"
                                           VerticalAlignment="Top"
                                           Margin="0,0,12,0">
                                        <Image Source="{Binding AppIcon}"
                                               Width="32" Height="32"/>
                                    </Border>
                                    
                                    <!-- Header Row -->
                                    <Grid Grid.Row="0" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- App Name -->
                                        <TextBlock Grid.Column="0"
                                                  Text="{Binding AppName}"
                                                  Foreground="White"
                                                  FontSize="14"
                                                  FontWeight="SemiBold"
                                                  VerticalAlignment="Center"/>
                                        
                                        <!-- Time -->
                                        <TextBlock Grid.Column="1"
                                                  Text="{Binding TimeAgo}"
                                                  Foreground="#80FFFFFF"
                                                  FontSize="12"
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                    
                                    <!-- Title -->
                                    <TextBlock Grid.Row="1" Grid.Column="1"
                                              Text="{Binding Title}"
                                              Foreground="White"
                                              FontSize="16"
                                              FontWeight="Medium"
                                              TextWrapping="Wrap"
                                              Margin="0,4,0,2"/>
                                    
                                    <!-- Content -->
                                    <TextBlock Grid.Row="2" Grid.Column="1"
                                              Text="{Binding Content}"
                                              Foreground="#CCFFFFFF"
                                              FontSize="14"
                                              TextWrapping="Wrap"
                                              MaxHeight="60"
                                              TextTrimming="CharacterEllipsis"/>
                                    
                                    <!-- Dismiss Button -->
                                    <Button Grid.Row="0" Grid.Column="2"
                                           Background="Transparent"
                                           BorderThickness="0"
                                           Width="24" Height="24"
                                           VerticalAlignment="Top"
                                           Click="DismissNotification_Click"
                                           Tag="{Binding}"
                                           Cursor="Hand">
                                        <!-- X Icon -->
                                        <Path Data="M6,6 L18,18 M6,18 L18,6"
                                             Stroke="#80FFFFFF"
                                             StrokeThickness="2"
                                             Stretch="Uniform"
                                             Width="12" Height="12"/>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <!-- Empty State -->
                <Grid x:Name="EmptyState"
                     Visibility="{Binding HasNotifications, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                     Margin="0,100,0,0">
                    <StackPanel HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        <!-- Bell Icon -->
                        <Border Background="#40FFFFFF"
                               CornerRadius="40"
                               Width="80" Height="80"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20">
                            <Path Data="M12,2 C13.1,2 14,2.9 14,4 C14,5.1 13.1,6 12,6 C10.9,6 10,5.1 10,4 C10,2.9 10.9,2 12,2 Z M21,19 L22,20 L22,21 L2,21 L2,20 L3,19 L3,16 C3,13.87 4.36,12.13 6.5,11.67 L6.5,11 C6.5,9.34 7.84,8 9.5,8 L14.5,8 C16.16,8 17.5,9.34 17.5,11 L17.5,11.67 C19.64,12.13 21,13.87 21,16 L21,19 Z"
                                 Fill="White"
                                 Stretch="Uniform"
                                 Width="40" Height="40"/>
                        </Border>
                        
                        <TextBlock Text="No Notifications"
                                  Foreground="White"
                                  FontSize="20"
                                  FontWeight="SemiBold"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,8"/>
                        
                        <TextBlock Text="You're all caught up!"
                                  Foreground="#80FFFFFF"
                                  FontSize="16"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Bottom Indicator -->
        <Border Background="#40FFFFFF"
               CornerRadius="2"
               Width="40" Height="4"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Center"
               Margin="0,0,0,20"/>
    </Grid>
</UserControl>