<UserControl x:Class="SeroDesk.Views.SeroLaunchpad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SeroDesk.Views"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1920">
    
    <UserControl.Resources>
        <!-- Resources no longer needed - using Canvas-based SeroIconView -->
    </UserControl.Resources>
    
    <!-- Full-Screen iOS-Style App Grid -->
    <Grid x:Name="LaunchpadGrid"
          ManipulationStarting="LaunchpadGrid_ManipulationStarting"
          ManipulationDelta="LaunchpadGrid_ManipulationDelta"
          ManipulationCompleted="LaunchpadGrid_ManipulationCompleted"
          IsManipulationEnabled="True">
        
        <!-- Windows Wallpaper Background -->
        <Rectangle x:Name="WallpaperBackground" 
                  Fill="{Binding CurrentWallpaper}"
                  Stretch="UniformToFill"/>
        
        <!-- Subtle Dark Overlay for better readability -->
        <Rectangle Fill="Black" Opacity="0.1"/>
        
        <!-- Status Bar moved to separate StatusBarWindow -->
        
        <!-- Canvas-based Icon System -->
        <Grid Margin="80,110,80,100">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Page Indicators -->
            <StackPanel Grid.Row="0" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"
                       x:Name="PageIndicators">
                <!-- Page dots will be added dynamically -->
            </StackPanel>
            
            <!-- Main Canvas for Icons -->
            <Border Grid.Row="1" ClipToBounds="True">
                <Canvas x:Name="IconCanvas" 
                       Background="Transparent"
                       ManipulationStarting="IconCanvas_ManipulationStarting"
                       ManipulationDelta="IconCanvas_ManipulationDelta"
                       ManipulationCompleted="IconCanvas_ManipulationCompleted"
                       IsManipulationEnabled="True">
                    <!-- Icons will be added dynamically as SeroIconView controls -->
                </Canvas>
            </Border>
            
            <!-- Drop Zone Indicators (will be added dynamically during drag) -->
            <Canvas x:Name="DropZoneCanvas" 
                    Grid.Row="1"
                    Background="Transparent"
                    IsHitTestVisible="False">
                <!-- Drop zone indicators will be added here during drag operations -->
            </Canvas>
        </Grid>
        
        <!-- Search Bar (Apple-style) -->
        <Border x:Name="SearchBar"
                Background="#E6F0F0F0"
                CornerRadius="25"
                Width="500" Height="50"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Margin="0,40,0,0"
                BorderBrush="#80FFFFFF"
                BorderThickness="1.5"
                Visibility="Visible">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" Opacity="0.2" ShadowDepth="3"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Search Icon -->
                <Path Grid.Column="0"
                      Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                      Fill="#666666"
                      Stretch="Uniform"
                      Width="20" Height="20"
                      Margin="15,0,10,0"/>
                
                <!-- Search TextBox -->
                <TextBox Grid.Column="1"
                        x:Name="SearchBox"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#333333"
                        FontSize="16"
                        FontWeight="Medium"
                        VerticalAlignment="Center"
                        Margin="0,0,20,0"
                        Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                        TextChanged="SearchBox_TextChanged">
                    <TextBox.Resources>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                
                <!-- Placeholder Text -->
                <TextBlock Grid.Column="1"
                          Text="Search"
                          Foreground="#999999"
                          FontSize="16"
                          VerticalAlignment="Center"
                          Margin="0,0,20,0"
                          IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text.Length, ElementName=SearchBox}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>
        
        <!-- Group Creation Overlay -->
        <Grid x:Name="GroupCreationOverlay"
              Background="#80000000"
              Visibility="Collapsed">
            <Border Background="#CC1E1E1E"
                    CornerRadius="20"
                    Width="400"
                    Height="200"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel Margin="40">
                    <TextBlock Text="Create New Group"
                              Foreground="White"
                              FontSize="18"
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,20"/>
                    
                    <Border Background="#40FFFFFF"
                            BorderThickness="1"
                            BorderBrush="#60FFFFFF"
                            CornerRadius="8"
                            Margin="0,0,0,20">
                        <TextBox x:Name="GroupNameTextBox"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="12"
                                FontSize="14"
                                Text="New Group"/>
                    </Border>
                    
                    <StackPanel Orientation="Horizontal"
                               HorizontalAlignment="Center">
                        <Button Content="Cancel"
                               Foreground="White"
                               BorderThickness="0"
                               Padding="20,8"
                               Margin="0,0,10,0"
                               Click="CancelGroupCreation_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="#40FFFFFF"
                                            CornerRadius="8"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <Button Content="Create"
                               Background="Transparent"
                               Foreground="White"
                               BorderThickness="0"
                               Padding="20,8"
                               Click="CreateGroup_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="#007AFF"
                                            CornerRadius="8"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Group Expanded View Overlay -->
        <Grid x:Name="GroupExpandedOverlay"
              Background="#80000000"
              Visibility="Collapsed">
            <Border Background="#CC1E1E1E"
                    CornerRadius="20"
                    MaxWidth="600"
                    MaxHeight="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="40">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Group Header -->
                    <Grid Grid.Row="0" Margin="20,20,20,10">
                        <TextBlock x:Name="GroupExpandedTitle"
                                  Text="Group Name"
                                  Foreground="White"
                                  FontSize="20"
                                  FontWeight="Bold"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left"/>
                        <Button Content="✕"
                               Background="Transparent"
                               Foreground="White"
                               BorderThickness="0"
                               FontSize="18"
                               Width="30" Height="30"
                               Click="CloseGroupExpanded_Click"
                               Cursor="Hand"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"/>
                    </Grid>
                    
                    <!-- Group Apps Grid -->
                    <ScrollViewer Grid.Row="1" 
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled"
                                 Margin="20,0">
                        <ItemsControl x:Name="GroupAppsGrid">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="4"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Width="80" Height="80"
                                            Margin="10"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Click="GroupAppIcon_Click"
                                            Tag="{Binding}"
                                            Style="{StaticResource LaunchpadIconStyle}">
                                        <Grid>
                                            <!-- Icon Background -->
                                            <Border Background="#40FFFFFF"
                                                   CornerRadius="12"
                                                   Width="60" Height="60"
                                                   VerticalAlignment="Top">
                                                <Border.Effect>
                                                    <DropShadowEffect BlurRadius="8" Opacity="0.3"/>
                                                </Border.Effect>
                                                
                                                <!-- App Icon -->
                                                <Image Source="{Binding IconImage}"
                                                       Width="40" Height="40">
                                                    <Image.Clip>
                                                        <RectangleGeometry Rect="0,0,40,40" 
                                                                         RadiusX="8" RadiusY="8"/>
                                                    </Image.Clip>
                                                </Image>
                                            </Border>
                                            
                                            <!-- App Name -->
                                            <TextBlock Text="{Binding Name}"
                                                     Foreground="White"
                                                     FontSize="10"
                                                     FontWeight="Medium"
                                                     TextAlignment="Center"
                                                     TextWrapping="Wrap"
                                                     VerticalAlignment="Bottom"
                                                     Margin="2,0,2,5"
                                                     MaxWidth="76"
                                                     MaxHeight="26"
                                                     TextTrimming="CharacterEllipsis"/>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Close Button -->
                    <Button Grid.Row="2"
                           Content="Close"
                           Background="Transparent"
                           Foreground="White"
                           BorderThickness="0"
                           Padding="20,10"
                           Margin="20"
                           HorizontalAlignment="Center"
                           Click="CloseGroupExpanded_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#40FFFFFF"
                                        CornerRadius="15"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Group Rename Overlay -->
        <Grid x:Name="GroupRenameOverlay"
              Background="#80000000"
              Visibility="Collapsed">
            <Border Background="#CC1E1E1E"
                    CornerRadius="20"
                    Width="400"
                    Height="200"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel Margin="40">
                    <TextBlock Text="Rename Group"
                              Foreground="White"
                              FontSize="18"
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,20"/>
                    
                    <Border Background="#40FFFFFF"
                            BorderThickness="1"
                            BorderBrush="#60FFFFFF"
                            CornerRadius="8"
                            Margin="0,0,0,20">
                        <TextBox x:Name="GroupRenameTextBox"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="12"
                                FontSize="14"
                                Text=""/>
                    </Border>
                    
                    <StackPanel Orientation="Horizontal"
                               HorizontalAlignment="Center">
                        <Button Content="Cancel"
                               Background="Transparent"
                               Foreground="White"
                               BorderThickness="0"
                               Padding="20,8"
                               Margin="0,0,10,0"
                               Click="CancelGroupRename_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="#40FFFFFF"
                                            CornerRadius="8"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <Button Content="Rename"
                               Background="Transparent"
                               Foreground="White"
                               BorderThickness="0"
                               Padding="20,8"
                               Click="ConfirmGroupRename_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="#007AFF"
                                            CornerRadius="8"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>