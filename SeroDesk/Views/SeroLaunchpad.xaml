<UserControl x:Class="SeroDesk.Views.SeroLaunchpad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SeroDesk.Views"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1920">
    
    <!-- Full-Screen iOS-Style App Grid -->
    <Grid x:Name="LaunchpadGrid"
          ManipulationStarting="LaunchpadGrid_ManipulationStarting"
          ManipulationDelta="LaunchpadGrid_ManipulationDelta"
          ManipulationCompleted="LaunchpadGrid_ManipulationCompleted"
          IsManipulationEnabled="True">
        
        <!-- Windows Wallpaper Background -->
        <Rectangle x:Name="WallpaperBackground" 
                  Fill="{Binding CurrentWallpaper}"
                  Stretch="UniformToFill"/>
        
        <!-- Subtle Dark Overlay for better readability -->
        <Rectangle Fill="Black" Opacity="0.1"/>
        
        <!-- iOS-Style Status Bar -->
        <local:SeroStatusBar VerticalAlignment="Top"
                            Panel.ZIndex="100"/>
        
        <!-- App Grid Container -->
        <ScrollViewer x:Name="AppScrollViewer"
                     VerticalScrollBarVisibility="Hidden"
                     HorizontalScrollBarVisibility="Disabled"
                     PanningMode="VerticalOnly"
                     CanContentScroll="True">
            
            <Grid Margin="80,124,80,200">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Page Indicators -->
                <StackPanel Grid.Row="0" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"
                           x:Name="PageIndicators"
                           Visibility="{Binding HasMultiplePages, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <!-- Page dots will be added dynamically in code-behind -->
                </StackPanel>
                
                <!-- App Grid (Groups + Individual Apps) -->
                <ItemsControl Grid.Row="1"
                            x:Name="AllAppsGrid"
                            ItemsSource="{Binding DisplayItems}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <!-- iOS-Style 6x8 Grid -->
                            <UniformGrid Columns="8" Rows="6" 
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Top"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <!-- Template Selector for Groups vs Individual Apps -->
                    <ItemsControl.ItemTemplateSelector>
                        <local:LaunchpadItemTemplateSelector>
                            <!-- Group Template -->
                            <local:LaunchpadItemTemplateSelector.GroupTemplate>
                                <DataTemplate>
                                    <Button Width="140" Height="140"
                                            Margin="10"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Click="GroupIcon_Click"
                                            MouseDoubleClick="GroupIcon_DoubleClick"
                                            Tag="{Binding}"
                                            Style="{StaticResource LaunchpadIconStyle}"
                                            AllowDrop="True"
                                            Drop="GroupIcon_Drop"
                                            DragEnter="GroupIcon_DragEnter"
                                            DragLeave="GroupIcon_DragLeave"
                                            MouseRightButtonUp="GroupIcon_RightClick">
                                        <Button.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Rename Group" Click="RenameGroup_Click"/>
                                                <MenuItem Header="Delete Group" Click="DeleteGroup_Click"/>
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                        <!-- Group Icon Content -->
                                        <Grid>
                                            <!-- Group Background -->
                                            <Border Background="#60FFFFFF"
                                                   CornerRadius="22"
                                                   Width="100" Height="100"
                                                   VerticalAlignment="Top">
                                                <Border.Effect>
                                                    <DropShadowEffect BlurRadius="10" Opacity="0.3"/>
                                                </Border.Effect>
                                                
                                                <!-- Group Composite Icon -->
                                                <Image Source="{Binding GroupIcon}"
                                                       Width="70" Height="70"/>
                                            </Border>
                                            
                                            <!-- Group Name -->
                                            <TextBlock Text="{Binding Name}"
                                                     Foreground="White"
                                                     FontSize="13"
                                                     FontWeight="Medium"
                                                     TextAlignment="Center"
                                                     TextWrapping="Wrap"
                                                     VerticalAlignment="Bottom"
                                                     Margin="5,0,5,10"
                                                     MaxHeight="32"
                                                     TextTrimming="CharacterEllipsis"/>
                                            
                                            <!-- App Count Badge -->
                                            <Border Background="#FF3B30"
                                                   CornerRadius="10"
                                                   Width="20" Height="20"
                                                   VerticalAlignment="Top"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,5,5,0">
                                                <TextBlock Text="{Binding Apps.Count}"
                                                         Foreground="White"
                                                         FontSize="11"
                                                         FontWeight="Bold"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </local:LaunchpadItemTemplateSelector.GroupTemplate>
                            
                            <!-- Individual App Template -->
                            <local:LaunchpadItemTemplateSelector.AppTemplate>
                                <DataTemplate>
                                    <Button Width="100" Height="100"
                                            Margin="5"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Click="AppIcon_Click"
                                            Tag="{Binding}"
                                            Style="{StaticResource LaunchpadIconStyle}"
                                            AllowDrop="True"
                                            PreviewMouseLeftButtonDown="AppIcon_PreviewMouseLeftButtonDown"
                                            PreviewMouseMove="AppIcon_PreviewMouseMove"
                                            Drop="AppIcon_Drop"
                                            DragEnter="AppIcon_DragEnter"
                                            DragLeave="AppIcon_DragLeave">
                                        <Grid>
                                            <!-- Icon Background -->
                                            <Border Background="#60FFFFFF"
                                                   CornerRadius="16"
                                                   Width="70" Height="70"
                                                   VerticalAlignment="Top">
                                                <Border.Effect>
                                                    <DropShadowEffect BlurRadius="12" Opacity="0.4" ShadowDepth="2"/>
                                                </Border.Effect>
                                                <Border.Background>
                                                    <SolidColorBrush Color="White" Opacity="0.25"/>
                                                </Border.Background>
                                                <Border.OpacityMask>
                                                    <VisualBrush>
                                                        <VisualBrush.Visual>
                                                            <Border Background="White" CornerRadius="16"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Border.OpacityMask>
                                                
                                                <!-- App Icon -->
                                                <Image Source="{Binding IconImage}"
                                                       Width="50" Height="50">
                                                    <Image.Clip>
                                                        <RectangleGeometry Rect="0,0,50,50" 
                                                                         RadiusX="10" RadiusY="10"/>
                                                    </Image.Clip>
                                                </Image>
                                            </Border>
                                            
                                            <!-- App Name -->
                                            <TextBlock Text="{Binding Name}"
                                                     Foreground="White"
                                                     FontSize="11"
                                                     FontWeight="Medium"
                                                     TextAlignment="Center"
                                                     TextWrapping="Wrap"
                                                     VerticalAlignment="Bottom"
                                                     Margin="2,0,2,5"
                                                     MaxWidth="90"
                                                     MaxHeight="28"
                                                     TextTrimming="CharacterEllipsis">
                                                <TextBlock.Effect>
                                                    <DropShadowEffect Color="Black" BlurRadius="3" Opacity="0.8" ShadowDepth="1"/>
                                                </TextBlock.Effect>
                                            </TextBlock>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </local:LaunchpadItemTemplateSelector.AppTemplate>
                        </local:LaunchpadItemTemplateSelector>
                    </ItemsControl.ItemTemplateSelector>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
        
        <!-- Search Bar (optional - can be hidden for desktop mode) -->
        <Border x:Name="SearchBar"
                Background="#40FFFFFF"
                CornerRadius="20"
                Width="400" Height="40"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Margin="0,84,0,0"
                BorderBrush="#60FFFFFF"
                BorderThickness="1"
                Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Search Icon -->
                <Path Grid.Column="0"
                      Data="M21,20 L16.5,15.5 C17.8,14 18.5,12 18.5,10 C18.5,5.8 15.2,2.5 11,2.5 C6.8,2.5 3.5,5.8 3.5,10 C3.5,14.2 6.8,17.5 11,17.5 C13,17.5 15,16.8 16.5,15.5 L21,20"
                      Stroke="#CCFFFFFF"
                      StrokeThickness="2"
                      Fill="Transparent"
                      Stretch="Uniform"
                      Width="16" Height="16"
                      Margin="12,0,8,0"/>
                
                <!-- Search TextBox -->
                <TextBox Grid.Column="1"
                        x:Name="SearchBox"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="White"
                        FontSize="14"
                        VerticalAlignment="Center"
                        Margin="0,0,15,0"
                        TextChanged="SearchBox_TextChanged">
                    <TextBox.Resources>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                
                <!-- Placeholder Text -->
                <TextBlock Grid.Column="1"
                          Text="Search apps..."
                          Foreground="#80FFFFFF"
                          FontSize="14"
                          VerticalAlignment="Center"
                          Margin="0,0,15,0"
                          IsHitTestVisible="False"
                          Visibility="{Binding Text, ElementName=SearchBox, Converter={StaticResource StringToVisibilityConverter}}"/>
            </Grid>
        </Border>
        
        <!-- Group Creation Overlay -->
        <Grid x:Name="GroupCreationOverlay"
              Background="#80000000"
              Visibility="Collapsed">
            <Border Background="#CC1E1E1E"
                    CornerRadius="20"
                    Width="400"
                    Height="200"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel Margin="40">
                    <TextBlock Text="Create New Group"
                              Foreground="White"
                              FontSize="18"
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,20"/>
                    
                    <Border Background="#40FFFFFF"
                            BorderThickness="1"
                            BorderBrush="#60FFFFFF"
                            CornerRadius="8"
                            Margin="0,0,0,20">
                        <TextBox x:Name="GroupNameTextBox"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="12"
                                FontSize="14"
                                Text="New Group"/>
                    </Border>
                    
                    <StackPanel Orientation="Horizontal"
                               HorizontalAlignment="Center">
                        <Button Content="Cancel"
                               Background="Transparent"
                               Foreground="White"
                               BorderThickness="0"
                               Padding="20,8"
                               Margin="0,0,10,0"
                               Click="CancelGroupCreation_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="#40FFFFFF"
                                            CornerRadius="8"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <Button Content="Create"
                               Background="Transparent"
                               Foreground="White"
                               BorderThickness="0"
                               Padding="20,8"
                               Click="CreateGroup_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="#007AFF"
                                            CornerRadius="8"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Group Expanded View Overlay -->
        <Grid x:Name="GroupExpandedOverlay"
              Background="#80000000"
              Visibility="Collapsed">
            <Border Background="#CC1E1E1E"
                    CornerRadius="20"
                    MaxWidth="600"
                    MaxHeight="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="40">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Group Header -->
                    <Grid Grid.Row="0" Margin="20,20,20,10">
                        <TextBlock x:Name="GroupExpandedTitle"
                                  Text="Group Name"
                                  Foreground="White"
                                  FontSize="20"
                                  FontWeight="Bold"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left"/>
                        <Button Content="âœ•"
                               Background="Transparent"
                               Foreground="White"
                               BorderThickness="0"
                               FontSize="18"
                               Width="30" Height="30"
                               Click="CloseGroupExpanded_Click"
                               Cursor="Hand"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"/>
                    </Grid>
                    
                    <!-- Group Apps Grid -->
                    <ScrollViewer Grid.Row="1" 
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled"
                                 Margin="20,0">
                        <ItemsControl x:Name="GroupAppsGrid">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="4"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Width="80" Height="80"
                                            Margin="10"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Click="GroupAppIcon_Click"
                                            Tag="{Binding}"
                                            Style="{StaticResource LaunchpadIconStyle}">
                                        <Grid>
                                            <!-- Icon Background -->
                                            <Border Background="#40FFFFFF"
                                                   CornerRadius="12"
                                                   Width="60" Height="60"
                                                   VerticalAlignment="Top">
                                                <Border.Effect>
                                                    <DropShadowEffect BlurRadius="8" Opacity="0.3"/>
                                                </Border.Effect>
                                                
                                                <!-- App Icon -->
                                                <Image Source="{Binding IconImage}"
                                                       Width="40" Height="40">
                                                    <Image.Clip>
                                                        <RectangleGeometry Rect="0,0,40,40" 
                                                                         RadiusX="8" RadiusY="8"/>
                                                    </Image.Clip>
                                                </Image>
                                            </Border>
                                            
                                            <!-- App Name -->
                                            <TextBlock Text="{Binding Name}"
                                                     Foreground="White"
                                                     FontSize="10"
                                                     FontWeight="Medium"
                                                     TextAlignment="Center"
                                                     TextWrapping="Wrap"
                                                     VerticalAlignment="Bottom"
                                                     Margin="2,0,2,5"
                                                     MaxWidth="76"
                                                     MaxHeight="26"
                                                     TextTrimming="CharacterEllipsis"/>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Close Button -->
                    <Button Grid.Row="2"
                           Content="Close"
                           Background="Transparent"
                           Foreground="White"
                           BorderThickness="0"
                           Padding="20,10"
                           Margin="20"
                           HorizontalAlignment="Center"
                           Click="CloseGroupExpanded_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#40FFFFFF"
                                        CornerRadius="15"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Group Rename Overlay -->
        <Grid x:Name="GroupRenameOverlay"
              Background="#80000000"
              Visibility="Collapsed">
            <Border Background="#CC1E1E1E"
                    CornerRadius="20"
                    Width="400"
                    Height="200"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel Margin="40">
                    <TextBlock Text="Rename Group"
                              Foreground="White"
                              FontSize="18"
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,20"/>
                    
                    <Border Background="#40FFFFFF"
                            BorderThickness="1"
                            BorderBrush="#60FFFFFF"
                            CornerRadius="8"
                            Margin="0,0,0,20">
                        <TextBox x:Name="GroupRenameTextBox"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="12"
                                FontSize="14"
                                Text=""/>
                    </Border>
                    
                    <StackPanel Orientation="Horizontal"
                               HorizontalAlignment="Center">
                        <Button Content="Cancel"
                               Background="Transparent"
                               Foreground="White"
                               BorderThickness="0"
                               Padding="20,8"
                               Margin="0,0,10,0"
                               Click="CancelGroupRename_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="#40FFFFFF"
                                            CornerRadius="8"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <Button Content="Rename"
                               Background="Transparent"
                               Foreground="White"
                               BorderThickness="0"
                               Padding="20,8"
                               Click="ConfirmGroupRename_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="#007AFF"
                                            CornerRadius="8"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>