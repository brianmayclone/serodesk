<UserControl x:Class="SeroDesk.Views.SeroIconView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Width="90" Height="120"
             d:DesignHeight="100" d:DesignWidth="80">
    
    <Grid x:Name="IconRoot" Background="Transparent" MouseRightButtonUp="IconRoot_RightClick">
        <Grid.ContextMenu>
            <ContextMenu x:Name="IconContextMenu">
                <MenuItem Header="Open" Click="ContextMenu_Open"/>
                <Separator/>
                <MenuItem Header="Pin to Dock" x:Name="PinToDockMenuItem" Click="ContextMenu_PinToDock"/>
                <MenuItem Header="Unpin from Dock" x:Name="UnpinFromDockMenuItem" Click="ContextMenu_UnpinFromDock"/>
                <Separator/>
                <MenuItem Header="Open File Location" Click="ContextMenu_OpenFileLocation"/>
                <MenuItem Header="Properties" Click="ContextMenu_Properties"/>
            </ContextMenu>
        </Grid.ContextMenu>
        <!-- Glassmorphism Background (without blur effect) -->
        <Border x:Name="GlassBackground"
                CornerRadius="16"
                Width="70" Height="70"
                VerticalAlignment="Top"
                HorizontalAlignment="Center">
            <Border.Background>
                <!-- Multi-layer glassmorphism effect -->
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#30FFFFFF" Offset="0"/>
                    <GradientStop Color="#10FFFFFF" Offset="0.5"/>
                    <GradientStop Color="#20FFFFFF" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <!-- Add subtle inner border for glass effect -->
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#60FFFFFF" Offset="0"/>
                    <GradientStop Color="#20FFFFFF" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.BorderThickness>1</Border.BorderThickness>
        </Border>
        
        <!-- Icon Container (sharp, no blur) -->
        <Border x:Name="IconBackground" 
                CornerRadius="16"
                Width="70" Height="70"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Background="Transparent">
            <Border.Effect>
                <DropShadowEffect BlurRadius="12" Opacity="0.4" ShadowDepth="2"/>
            </Border.Effect>
            
            <!-- App Icon Image (sharp) -->
            <Image x:Name="IconImage"
                   Width="50" Height="50"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
                <Image.Clip>
                    <RectangleGeometry Rect="0,0,50,50" 
                                     RadiusX="10" RadiusY="10"/>
                </Image.Clip>
            </Image>
        </Border>
        
        <!-- App Name -->
        <TextBlock x:Name="IconText"
                   Foreground="White"
                   FontSize="12"
                   FontWeight="Medium"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center"
                   Margin="2,72,2,0"
                   MaxWidth="86"
                   MaxHeight="40"
                   TextTrimming="CharacterEllipsis">
            <TextBlock.Effect>
                <DropShadowEffect Color="Black" BlurRadius="3" Opacity="0.8" ShadowDepth="1"/>
            </TextBlock.Effect>
        </TextBlock>
        
        <!-- Group App Count Badge (for groups) -->
        <Border x:Name="AppCountBadge"
                Background="#FF3B30"
                CornerRadius="10"
                Width="20" Height="20"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="0,4,4,0"
                Visibility="Collapsed">
            <TextBlock x:Name="AppCountText"
                       Foreground="White"
                       FontSize="11"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        
        <!-- Drag Visual Feedback -->
        <Border x:Name="DragPreview"
                Background="#40007AFF"
                CornerRadius="16"
                Width="70" Height="70"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Visibility="Collapsed"/>
    </Grid>
</UserControl>