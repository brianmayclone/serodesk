<Window x:Class="SeroDesk.Views.StatusBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:SeroDesk.Views"
        Title="SeroDesk StatusBar"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        Left="0" Top="0">
    
    <Grid>
        <!-- The actual status bar content -->
        <views:SeroStatusBar x:Name="StatusBar"/>
    </Grid>
</Window>
