<Window x:Class="SeroDesk.Views.DockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:SeroDesk.Views"
        Title="SeroDesk Dock"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        SizeToContent="WidthAndHeight"
        Left="0" Top="0"
        SourceInitialized="DockWindow_SourceInitialized">
    
    <Grid Background="Transparent">
        <!-- The actual dock content -->
        <views:SeroDock x:Name="Dock"/>
    </Grid>
</Window>