<UserControl x:Class="SeroDesk.Views.SeroControlCenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="960">
    
    <!-- iOS-Style Control Center -->
    <Grid x:Name="ControlPanel" 
          Background="#E6000000"
          Visibility="Collapsed"
          RenderTransformOrigin="0.5,0">
        <Grid.RenderTransform>
            <TranslateTransform x:Name="ControlTransform" Y="-1080"/>
        </Grid.RenderTransform>
        
        <!-- Content Container -->
        <ScrollViewer VerticalScrollBarVisibility="Hidden"
                     HorizontalScrollBarVisibility="Disabled"
                     Margin="20,60,20,120">
            
            <StackPanel>
                <!-- Connectivity Section -->
                <Border Background="#CC1E1E1E"
                       CornerRadius="20"
                       Margin="0,20,0,20"
                       Padding="20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" 
                                         Opacity="0.3" 
                                         ShadowDepth="2"/>
                    </Border.Effect>
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- First Row: WiFi, Bluetooth, Mobile Data -->
                        <UniformGrid Grid.Row="0" Columns="3" Margin="0,0,0,16">
                            <!-- WiFi Toggle -->
                            <Button x:Name="WiFiToggle"
                                   Background="#FF0080FF"
                                   BorderThickness="0"
                                   Height="80"
                                   Margin="0,0,8,0"
                                   Click="WiFiToggle_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="16"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <StackPanel HorizontalAlignment="Center">
                                    <!-- WiFi Icon -->
                                    <Path Data="M12,2 C17.52,2 22,6.48 22,12 C22,17.52 17.52,22 12,22 C6.48,22 2,17.52 2,12 C2,6.48 6.48,2 12,2 Z M8,12 C10.21,12 12,10.21 12,8 C12,5.79 10.21,4 8,4 C5.79,4 4,5.79 4,8 C4,10.21 5.79,12 8,12 Z"
                                         Fill="White"
                                         Stretch="Uniform"
                                         Width="32" Height="32"
                                         Margin="0,0,0,8"/>
                                    <TextBlock Text="Wi-Fi"
                                              Foreground="White"
                                              FontSize="12"
                                              FontWeight="SemiBold"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            
                            <!-- Bluetooth Toggle -->
                            <Button x:Name="BluetoothToggle"
                                   Background="#FF666666"
                                   BorderThickness="0"
                                   Height="80"
                                   Margin="4,0"
                                   Click="BluetoothToggle_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="16"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <StackPanel HorizontalAlignment="Center">
                                    <!-- Bluetooth Icon -->
                                    <Path Data="M12,2 L16,6 L13,9 L16,12 L12,16 L8,12 L11,9 L8,6 L12,2 Z M12,4.83 L10.41,6.41 L12,8 L12,4.83 Z M12,10 L10.41,11.59 L12,13.17 L12,10 Z"
                                         Fill="White"
                                         Stretch="Uniform"
                                         Width="32" Height="32"
                                         Margin="0,0,0,8"/>
                                    <TextBlock Text="Bluetooth"
                                              Foreground="White"
                                              FontSize="12"
                                              FontWeight="SemiBold"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            
                            <!-- Mobile Data Toggle -->
                            <Button x:Name="MobileDataToggle"
                                   Background="#FF0080FF"
                                   BorderThickness="0"
                                   Height="80"
                                   Margin="8,0,0,0"
                                   Click="MobileDataToggle_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="16"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <StackPanel HorizontalAlignment="Center">
                                    <!-- Mobile Data Icon -->
                                    <Path Data="M2,17 L6,13 L10,17 L14,13 L18,17 L22,13 L22,21 L2,21 L2,17 Z M2,3 L6,7 L10,3 L14,7 L18,3 L22,7 L22,15 L18,11 L14,15 L10,11 L6,15 L2,11 L2,3 Z"
                                         Fill="White"
                                         Stretch="Uniform"
                                         Width="32" Height="32"
                                         Margin="0,0,0,8"/>
                                    <TextBlock Text="Mobile Data"
                                              Foreground="White"
                                              FontSize="12"
                                              FontWeight="SemiBold"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </UniformGrid>
                        
                        <!-- Second Row: Airplane Mode, Hotspot -->
                        <UniformGrid Grid.Row="1" Columns="2">
                            <!-- Airplane Mode Toggle -->
                            <Button x:Name="AirplaneModeToggle"
                                   Background="#FF666666"
                                   BorderThickness="0"
                                   Height="80"
                                   Margin="0,0,8,0"
                                   Click="AirplaneModeToggle_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="16"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <StackPanel HorizontalAlignment="Center">
                                    <!-- Airplane Icon -->
                                    <Path Data="M20.36,2.64 L21.64,3.64 L21.64,3.64 C22.39,4.39 22.39,5.61 21.64,6.36 L6.36,21.64 C5.61,22.39 4.39,22.39 3.64,21.64 C2.89,20.89 2.89,19.67 3.64,18.92 L5.05,17.51 L2,11 L4,11 L6.5,16.5 L15.51,7.49 L10,5 L10,3 L16.5,5.5 L18.92,3.08 C19.67,2.33 20.89,2.33 21.64,3.08 L20.36,2.64 Z"
                                         Fill="White"
                                         Stretch="Uniform"
                                         Width="32" Height="32"
                                         Margin="0,0,0,8"/>
                                    <TextBlock Text="Airplane Mode"
                                              Foreground="White"
                                              FontSize="12"
                                              FontWeight="SemiBold"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            
                            <!-- Personal Hotspot Toggle -->
                            <Button x:Name="HotspotToggle"
                                   Background="#FF666666"
                                   BorderThickness="0"
                                   Height="80"
                                   Margin="8,0,0,0"
                                   Click="HotspotToggle_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="16"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <StackPanel HorizontalAlignment="Center">
                                    <!-- Hotspot Icon -->
                                    <Path Data="M12,11 C13.66,11 15,12.34 15,14 C15,15.66 13.66,17 12,17 C10.34,17 9,15.66 9,14 C9,12.34 10.34,11 12,11 Z M12,2 C17.52,2 22,6.48 22,12 C22,17.52 17.52,22 12,22 C6.48,22 2,17.52 2,12 C2,6.48 6.48,2 12,2 Z M12,6 C9.24,6 7,8.24 7,11 L5,11 C5,7.13 8.13,4 12,4 C15.87,4 19,7.13 19,11 L17,11 C17,8.24 14.76,6 12,6 Z"
                                         Fill="White"
                                         Stretch="Uniform"
                                         Width="32" Height="32"
                                         Margin="0,0,0,8"/>
                                    <TextBlock Text="Hotspot"
                                              Foreground="White"
                                              FontSize="12"
                                              FontWeight="SemiBold"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </UniformGrid>
                    </Grid>
                </Border>
                
                <!-- Brightness Control -->
                <Border Background="#CC1E1E1E"
                       CornerRadius="20"
                       Margin="0,0,0,20"
                       Padding="20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" 
                                         Opacity="0.3" 
                                         ShadowDepth="2"/>
                    </Border.Effect>
                    
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Brightness Icon (Low) -->
                            <Path Grid.Column="0"
                                 Data="M12,8 C10.9,8 10,8.9 10,10 C10,11.1 10.9,12 12,12 C13.1,12 14,11.1 14,10 C14,8.9 13.1,8 12,8 Z"
                                 Fill="#80FFFFFF"
                                 Stretch="Uniform"
                                 Width="20" Height="20"
                                 Margin="0,0,16,0"/>
                            
                            <!-- Brightness Slider -->
                            <Slider Grid.Column="1"
                                   x:Name="BrightnessSlider"
                                   Minimum="0"
                                   Maximum="100"
                                   Value="{Binding BrightnessLevel, Mode=TwoWay}"
                                   VerticalAlignment="Center"
                                   ValueChanged="BrightnessSlider_ValueChanged">
                                <Slider.Template>
                                    <ControlTemplate TargetType="Slider">
                                        <Grid>
                                            <!-- Track -->
                                            <Border Background="#40FFFFFF"
                                                   CornerRadius="4"
                                                   Height="8"/>
                                            
                                            <!-- Fill -->
                                            <Border Background="White"
                                                   CornerRadius="4"
                                                   Height="8"
                                                   HorizontalAlignment="Left"
                                                   Width="{Binding Value, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource SliderValueToWidthConverter}}"/>
                                            
                                            <!-- Thumb -->
                                            <Thumb x:Name="PART_Track">
                                                <Thumb.Template>
                                                    <ControlTemplate TargetType="Thumb">
                                                        <Ellipse Fill="White"
                                                                Width="20"
                                                                Height="20"/>
                                                    </ControlTemplate>
                                                </Thumb.Template>
                                            </Thumb>
                                        </Grid>
                                    </ControlTemplate>
                                </Slider.Template>
                            </Slider>
                            
                            <!-- Brightness Icon (High) -->
                            <Path Grid.Column="2"
                                 Data="M12,8 C10.9,8 10,8.9 10,10 C10,11.1 10.9,12 12,12 C13.1,12 14,11.1 14,10 C14,8.9 13.1,8 12,8 Z M12,1 L12,4 M19,5 L17,7 M23,10 L20,10 M19,15 L17,13 M12,16 L12,19 M5,15 L7,13 M1,10 L4,10 M5,5 L7,7"
                                 Fill="White"
                                 Stretch="Uniform"
                                 Width="20" Height="20"
                                 Margin="16,0,0,0"/>
                        </Grid>
                        
                        <TextBlock Text="Brightness"
                                  Foreground="White"
                                  FontSize="16"
                                  FontWeight="SemiBold"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Volume Control -->
                <Border Background="#CC1E1E1E"
                       CornerRadius="20"
                       Margin="0,0,0,20"
                       Padding="20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" 
                                         Opacity="0.3" 
                                         ShadowDepth="2"/>
                    </Border.Effect>
                    
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Volume Icon (Low) -->
                            <Path Grid.Column="0"
                                 Data="M3,9 L7,9 L12,4 L12,20 L7,15 L3,15 L3,9 Z"
                                 Fill="#80FFFFFF"
                                 Stretch="Uniform"
                                 Width="20" Height="20"
                                 Margin="0,0,16,0"/>
                            
                            <!-- Volume Slider -->
                            <Slider Grid.Column="1"
                                   x:Name="VolumeSlider"
                                   Minimum="0"
                                   Maximum="100"
                                   Value="{Binding VolumeLevel, Mode=TwoWay}"
                                   VerticalAlignment="Center"
                                   ValueChanged="VolumeSlider_ValueChanged">
                                <Slider.Template>
                                    <ControlTemplate TargetType="Slider">
                                        <Grid>
                                            <!-- Track -->
                                            <Border Background="#40FFFFFF"
                                                   CornerRadius="4"
                                                   Height="8"/>
                                            
                                            <!-- Fill -->
                                            <Border Background="White"
                                                   CornerRadius="4"
                                                   Height="8"
                                                   HorizontalAlignment="Left"
                                                   Width="{Binding Value, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource SliderValueToWidthConverter}}"/>
                                            
                                            <!-- Thumb -->
                                            <Thumb x:Name="PART_Track">
                                                <Thumb.Template>
                                                    <ControlTemplate TargetType="Thumb">
                                                        <Ellipse Fill="White"
                                                                Width="20"
                                                                Height="20"/>
                                                    </ControlTemplate>
                                                </Thumb.Template>
                                            </Thumb>
                                        </Grid>
                                    </ControlTemplate>
                                </Slider.Template>
                            </Slider>
                            
                            <!-- Volume Icon (High) -->
                            <Path Grid.Column="2"
                                 Data="M3,9 L7,9 L12,4 L12,20 L7,15 L3,15 L3,9 Z M16.5,12 C16.5,10.23 15.5,8.71 14,7.97 L14,16.03 C15.5,15.29 16.5,13.77 16.5,12 Z M14,3.23 L14,5.29 C16.89,6.15 19,8.83 19,12 C19,15.17 16.89,17.85 14,18.71 L14,20.77 C18.01,19.86 21,16.28 21,12 C21,7.72 18.01,4.14 14,3.23 Z"
                                 Fill="White"
                                 Stretch="Uniform"
                                 Width="20" Height="20"
                                 Margin="16,0,0,0"/>
                        </Grid>
                        
                        <TextBlock Text="Volume"
                                  Foreground="White"
                                  FontSize="16"
                                  FontWeight="SemiBold"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Orientation Lock -->
                <Border Background="#CC1E1E1E"
                       CornerRadius="20"
                       Margin="0,0,0,20"
                       Padding="20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" 
                                         Opacity="0.3" 
                                         ShadowDepth="2"/>
                    </Border.Effect>
                    
                    <Button x:Name="OrientationLockToggle"
                           Background="Transparent"
                           BorderThickness="0"
                           Height="80"
                           Click="OrientationLockToggle_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                       CornerRadius="16"
                                       Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel HorizontalAlignment="Center">
                            <!-- Orientation Lock Icon -->
                            <Path Data="M12,3 C13.1,3 14,3.9 14,5 L14,19 C14,20.1 13.1,21 12,21 L4,21 C2.9,21 2,20.1 2,19 L2,5 C2,3.9 2.9,3 4,3 L12,3 Z M16,8 L20,8 L20,16 L16,16 L16,8 Z M22,6 L22,18 L22,18 C22,19.1 21.1,20 20,20 L20,20 C18.9,20 18,19.1 18,18 L18,6 C18,4.9 18.9,4 20,4 C21.1,4 22,4.9 22,6 Z"
                                 Fill="White"
                                 Stretch="Uniform"
                                 Width="40" Height="40"
                                 Margin="0,0,0,12"/>
                            <TextBlock Text="Portrait Orientation Lock"
                                      Foreground="White"
                                      FontSize="16"
                                      FontWeight="SemiBold"
                                      HorizontalAlignment="Center"/>
                            <TextBlock x:Name="OrientationLockStatus"
                                      Text="Off"
                                      Foreground="#80FFFFFF"
                                      FontSize="14"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Bottom Indicator -->
        <Border Background="#40FFFFFF"
               CornerRadius="2"
               Width="40" Height="4"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Center"
               Margin="0,0,0,20"/>
    </Grid>
</UserControl>